@page
@model IndexModel
@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
	ViewData["ParentLayout"] = "/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="row">
	<div class="col-md-10">
		<div class="card">
			<div class="card-body">
				<h3>@ViewData["Title"]</h3>
				<partial name="_StatusMessage" for="StatusMessage" />
				<form id="profile-form" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="row">
						<div class="col-md-6">
							<div class="mb-3">
								<label asp-for="Username" class="form-label"></label>
								<input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
							</div>
							<div class="mb-3">
								<label asp-for="Input.FirstName" class="form-label"></label>
								<input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your phone number." />
								<span asp-validation-for="Input.FirstName" class="text-danger"></span>
							</div>
							<div class="mb-3">
								<label asp-for="Input.LastName" class="form-label"></label>
								<input asp-for="Input.LastName" class="form-control" placeholder="Please enter your phone number." />
								<span asp-validation-for="Input.LastName" class="text-danger"></span>
							</div>
						</div>
						<div class="col-md-6">
							@* Set up Image Capture *@
							<div class="mb-3">
								<label class="form-label">Profile Picture</label>
								<div class="d-flex justify-content-center mb-3">
									@if (Model.Input.AvatarFileData != null)
									{
										<img class="card-img-top w-50 h-auto" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.AvatarFileData))" alt="" />
									}
									else
									{
										<img class="card-img-top w-50 h-auto" src="https://api.dicebear.com/9.x/initials/svg?seed=@Model.Input.FullName" alt="" />
									}
								</div>
								<input asp-for="@Model.Input.AvatarFormFile" class="form-control" type="file" accept=".png,.jpg,.jpeg,.gif"
									   onchange="document.getElementById('imageFileData').src = window.URL.createObjectURL(this.files[0])" />
								<span asp-validation-for="@Model.Input.AvatarFormFile" class="text-danger"></span>
							</div>
						</div>
						<div class="col">
							<button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
						</div>
					</div>
				</form>
			</div>
		</div>
    </div>
</div>

@section PageScripts {
    <partial name="_ValidationScriptsPartial" />
}
