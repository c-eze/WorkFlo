							// 	'rgb(255, 99, 132)',  //red
							// 	'rgb(75, 192, 192)',  //green
							// 	'rgb(54, 162, 235)'   //blue
							// ],
							// borderWidth: 1
						}]
					},
					options: {
						indexAxis: 'y',
						plugins: {
							legend: {
								display: false
							}
						},
						layout: {
							padding: {
								top: 50
							}
						}
					}
				});

			},
			failure: function (result) {
				alert(result.d);
			},
			error: function (result) {
				alert(result.d);
			}
		});

	</script>
