@model AspnetCoreMvcFull.Models.ViewModels.AssignPMViewModel

@{
	ViewData["Title"] = "Assign PM";
}
@* ************** Content ************** *@ 

<div class="row">
	<div class="col-xl">
		<div class="card mb-6">
			<div class="card-header d-flex align-items-center">
				<h4>Assign Project Manager</h4>
			</div>
			<div class="card-body">
				<form method="post" class="" asp-action="AssignPM" asp-controller="Projects">
					<input hidden asp-for="Project.Id" />
					<h5>Project: @Model.Project.Name</h5>
					<p>@Model.Project.Description</p>
					<div class="col-sm-8 col-md-6 mb-6">
						<label class="control-label">Project Manager</label>
						<select asp-for="PMID" class="form-select mb-6" asp-items="@Model.PMList">
							<option>Select PM</option>
						</select>

							<input type="submit" value="Assign" class="btn btn-primary" /> |
							<a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Project.Id">Back to Project Details</a> 
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


