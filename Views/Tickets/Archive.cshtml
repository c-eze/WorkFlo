@model AspnetCoreMvcFull.Models.Ticket

@{
	ViewData["Title"] = "Archive Ticket";
}

<h2>Archive Ticket</h2>
<div class="row">
	<div class="col-xl">
		<div class="card mb-6">
			<div class="card-header">
				<h4>Are you sure you want to archive this ticket?</h4>
			</div>
			<div class="card-body">
				<dl class="row">
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.Title)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Title)
					</dd>
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.Description)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Description)
					</dd>
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.Created)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Created)
					</dd>
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.Updated)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Updated)
					</dd> 
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.Project)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Project.Name)
					</dd>
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.TicketType)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.TicketType.Name)
					</dd>
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.TicketPriority)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.TicketPriority.Name)
					</dd>
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.TicketStatus)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.TicketStatus.Name)
					</dd>
					@if (Model.OwnerUser is not null)
					{
						<dt class="col-sm-2">
							<strong>@Html.DisplayNameFor(model => model.OwnerUser)</strong>
						</dt>
						<dd class="col-sm-10">
							@Html.DisplayFor(model => model.OwnerUser.FullName)
						</dd>
					}
					@if (Model.DeveloperUser is not null)
					{
					<dt class="col-sm-2">
						<strong>@Html.DisplayNameFor(model => model.DeveloperUser)</strong>
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.DeveloperUser.FullName)
					</dd>
					}
				</dl>

				<form asp-action="Archive">
					<input type="hidden" asp-for="Id" />
					<input type="submit" value="Archive" class="btn btn-danger" /> | <a asp-controller="Tickets" asp-action="Details" asp-route-id="@Model.Id">Back to Ticket</a>
				</form>
			</div>
		</div>
	</div>
</div>
